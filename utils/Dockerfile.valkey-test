FROM --platform=linux/amd64 ubuntu:22.04

# Build argument for engine version
ARG ENGINE_VERSION=8.0.1

# Install dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    build-essential \
    git \
    pkg-config \
    libssl-dev \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Install Valkey with dynamic version and parallel build
RUN wget -O valkey.tar.gz https://github.com/valkey-io/valkey/archive/refs/tags/${ENGINE_VERSION}.tar.gz \
    && tar -xzf valkey.tar.gz \
    && cd valkey-${ENGINE_VERSION} \
    && make -j"$(nproc)" \
    && make install \
    && cd .. \
    && rm -rf valkey-${ENGINE_VERSION} valkey.tar.gz

# Set working directory to match mounted volume
WORKDIR /workspace

# Default command
CMD ["/bin/bash"]
