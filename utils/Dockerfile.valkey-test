FROM ubuntu:22.04
ARG ENGINE_VERSION=8.0.1

# Prevent interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    build-essential \
    git \
    pkg-config \
    libssl-dev \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Install Valkey with parallel build
RUN wget -O valkey.tar.gz https://github.com/valkey-io/valkey/archive/refs/tags/${ENGINE_VERSION}.tar.gz \
    && tar -xzf valkey.tar.gz \
    && cd valkey-${ENGINE_VERSION} \
    && make -j"$(nproc)" \
    && make install PREFIX=/usr/local \
    && cd .. \
    && rm -rf valkey-${ENGINE_VERSION} valkey.tar.gz

# Ensure /usr/local/bin is in PATH
ENV PATH="/usr/local/bin:${PATH}"

WORKDIR /workspace
CMD ["/bin/bash"]
