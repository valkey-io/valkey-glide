{
    "name": "glide-rs",
    "version": "0.1.0",
    "description": "Valkey client",
    "license": "Apache-2.0",
    "napi": {
        "name": "glide-rs",
        "triples": {
            "default": false,
            "additional": [
                "x86_64-unknown-linux-musl",
                "x86_64-unknown-linux-gnu",
                "aarch64-unknown-linux-gnu",
                "aarch64-apple-darwin",
                "x86_64-apple-darwin",
                "aarch64-unknown-linux-musl"
            ]
        }
    },
    "engines": {
        "node": ">= 10"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    },
    "scripts": {
        "build:dev": "napi build --features testing_utilities --platform --js ../src/native.js --dts ../src/native.d.ts --js-package-name @valkey/valkey-glide --pipe \"prettier -w\" $npm_config_build_flags && npm run postbuild:copy-node",
        "build:benchmark": "napi build --release --features testing_utilities --platform --js ../src/native.js --dts ../src/native.d.ts --js-package-name @valkey/valkey-glide --pipe \"prettier -w\" $npm_config_build_flags && npm run postbuild:copy-node",
        "build:release:gnu": "napi build --release --strip --omit=dev --platform --zig --zig-abi-suffix=2.17 --js ../src/native.js --dts ../src/native.d.ts --js-package-name @valkey/valkey-glide --pipe \"prettier -w\" $npm_config_build_flags && npm run postbuild:copy-node",
        "build:release:musl": "napi build --release --strip --omit=dev --platform --zig --js ../src/native.js --dts ../src/native.d.ts --js-package-name @valkey/valkey-glide --pipe \"prettier -w\" $npm_config_build_flags && npm run postbuild:copy-node",
        "build:release:mac": "napi build --release --strip --omit=dev --platform --js ../src/native.js --dts ../src/native.d.ts --js-package-name @valkey/valkey-glide --pipe \"prettier -w\" $npm_config_build_flags && npm run postbuild:copy-node",
        "postbuild:copy-node": "cp glide-rs.*.node ../build-ts/",
        "artifacts": "napi artifacts",
        "prepublishOnly": "napi prepublish -t npm",
        "version": "napi version",
        "format": "npm run format:prettier && npm run format:rs",
        "format:prettier": "prettier . -w",
        "format:rs": "cargo fmt",
        "globals": "npm install --global @napi-rs/cli prettier",
        "check:build-output": "ls -lh ../build-ts/ && file ../build-ts/*.node"
    },
    "devDependencies": {
        "@napi-rs/cli": "2",
        "lint-staged": "16",
        "prettier": "3"
    },
    "lint-staged": {
        "*.@(js|ts|tsx)": [
            "npx eslint -c ../../eslint.config.mjs --fix"
        ],
        "*.@(js|ts|tsx|yml|yaml|md|json)": [
            "prettier --write"
        ]
    },
    "prettier": {
        "printWidth": 120,
        "semi": false,
        "trailingComma": "all",
        "singleQuote": true,
        "arrowParens": "always"
    }
}
